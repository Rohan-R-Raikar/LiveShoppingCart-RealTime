@model LiveShoppingCart_RealTime.Models.Cart

<h2>Your Cart</h2>
<hr />

@if (Model.Items == null || !Model.Items.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>
                        <img src="@item.Product.ImageUrl" width="60" height="60" class="rounded" />
                    </td>
                    <td>@item.Quantity</td>
                    <td>₹@item.Product.Price</td>
                    <td>₹@(item.Product.Price* item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="text-end">
        <strong>Total: ₹@Model.Items.Sum(i => i.Product.Price * i.Quantity)</strong>
    </h4>

    <div class="text-end">
        <a class="btn btn-success" href="/Checkout">Proceed to Checkout</a>
    </div>
}
