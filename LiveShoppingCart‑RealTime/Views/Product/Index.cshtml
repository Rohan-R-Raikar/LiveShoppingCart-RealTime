@model IEnumerable<LiveShoppingCart_RealTime.Models.Product>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Products";
    var user = HttpContextAccessor.HttpContext.User;
    bool canAddProduct = user.HasClaim("Permission", "CanAddProduct");
    bool canEditProduct = user.HasClaim("Permission", "CanEditProduct");
    bool canDeleteProduct = user.HasClaim("Permission", "CanDeleteProduct");
}

<div class="d-flex justify-content-between mb-3">
    <h2>Products</h2>
    @if (canAddProduct)
    {
        <a asp-action="Create" class="btn btn-success">Add New Product</a>
    }
</div>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height:200px; object-fit:cover;">
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text mb-1"><strong>Category:</strong> @product.Category?.Name</p>
                    <p class="card-text mb-1"><strong>Price:</strong> @product.Price.ToString("C")</p>
                    <p class="card-text mb-2"><strong>Stock:</strong> @product.Stock</p>
                    <div class="mt-auto d-flex justify-content-between">
                        @if (canEditProduct)
                        {
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-primary">Edit</a>
                        }
                        @if (canDeleteProduct)
                        {
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
                        }
                        @if (User.IsInRole("User"))
                        {
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <button type="submit" class="btn btn-primary">Add to Cart</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
