@model LiveShoppingCart_RealTime.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">Delete Product</h3>
    </div>

    <div class="card-body">
        <h5>Are you sure you want to delete this product?</h5>
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">@Model.Stock</dd>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    <img src="@Model.ImageUrl" alt="@Model.Name" style="width:100px;height:100px;" />
                </dd>
            }
        </dl>
    </div>

    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
