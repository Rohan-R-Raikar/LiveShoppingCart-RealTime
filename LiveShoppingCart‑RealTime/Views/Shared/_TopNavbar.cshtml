<!--begin::Header-->
<nav class="app-header navbar navbar-expand bg-body border-bottom">
    <!--begin::Container-->
    <div class="container-fluid">

        <!--begin::Start Navbar Links-->
        <ul class="navbar-nav">
            <!-- Sidebar Toggle (AdminLTE built-in) -->
            <li class="nav-item">
                <a class="nav-link" data-lte-toggle="sidebar" href="#" role="button">
                    <i class="bi bi-list"></i>
                </a>
            </li>

            <!-- App Brand -->
            <li class="nav-item d-none d-md-block">
                <a class="nav-link fw-bold" asp-controller="Home" asp-action="Index">
                    Shopping Cart
                </a>
            </li>

            <!-- Your Navigation Links -->
            <li class="nav-item d-none d-md-block">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item d-none d-md-block">
                    <a class="nav-link" asp-controller="Role" asp-action="Users">Role</a>
                </li>
            }
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item d-none d-md-block">
                    <a class="nav-link" asp-controller="Role" asp-action="Index">Permission</a>
                </li>
            }
            @if (!User.IsInRole("Admin"))
            {
                <li class="nav-item d-none d-md-block">
                    <a class="nav-link" asp-controller="Products" asp-action="Index">Products</a>
                </li>
                <li class="nav-item d-none d-md-block">
                    <a class="nav-link" asp-controller="Category" asp-action="Index">Category</a>
                </li>
                <li class="nav-item d-none d-md-block">
                    <a class="nav-link" asp-controller="Cart" asp-action="Index">Cart</a>
                </li>
            }
        </ul>
        <!--end::Start Navbar Links-->
        <!--begin::End Navbar Links-->
        <ul class="navbar-nav ms-auto">

            <!--begin::Search-->
            <li class="nav-item">
                <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                    <i class="bi bi-search"></i>
                </a>
            </li>
            <!--end::Search-->
            <!--begin::User Authentication-->
            @if (User.Identity.IsAuthenticated)
            {
                <!-- Authenticated User -->
                <li class="nav-item dropdown user-menu">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                        @* <img src="~/images/default-user.png" class="user-image rounded-circle shadow" alt="User Image"> *@
                        <span class="d-none d-md-inline">Hello, @User.Identity?.Name!</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-end">
                        <!--begin::User Info-->
                        <li class="user-header text-bg-primary">
                            @* <img src="~/images/default-user.png" class="rounded-circle shadow" alt="User Image"> *@
                            <p>@User.Identity?.Name<br /><small>Member since @DateTime.Now.Year</small></p>
                        </li>
                        <!--end::User Info-->
                        <li class="user-footer">
                            <a asp-controller="Account" asp-action="Profile" class="btn btn-default btn-flat">Profile</a>
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline float-end">
                                <button type="submit" class="btn btn-default btn-flat">Sign out</button>
                            </form>
                        </li>
                    </ul>
                </li>
            }
            else
            {
                <!-- Guest -->
                <li class="nav-item">
                    <a class="btn btn-outline-primary btn-sm me-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </li>
            }
            <!--end::User Authentication-->
            <!--begin::Fullscreen Toggle-->
            <li class="nav-item">
                <a class="nav-link" href="#" data-lte-toggle="fullscreen">
                    <i data-lte-icon="maximize" class="bi bi-arrows-fullscreen"></i>
                    <i data-lte-icon="minimize" class="bi bi-fullscreen-exit" style="display: none;"></i>
                </a>
            </li>
            <!--end::Fullscreen Toggle-->

        </ul>
        <!--end::End Navbar Links-->

    </div>
    <!--end::Container-->
</nav>
<!--end::Header-->
