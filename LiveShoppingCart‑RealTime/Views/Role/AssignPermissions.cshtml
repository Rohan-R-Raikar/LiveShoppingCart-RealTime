@model LiveShoppingCart_RealTime.Models.ViewModels.RolePermissionViewModel

@{
    ViewData["Title"] = "Assign Permissions";
}

<h2>Assign Permissions for Role: <span class="text-primary">@Model.RoleName</span></h2>

<form asp-action="AssignPermissions" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="RoleId" />
    <input type="hidden" asp-for="RoleName" />

    <div class="list-group mb-3">
        @for (int i = 0; i < Model.AllPermissions.Count; i++)
{
    var permission = Model.AllPermissions[i];
    var isChecked = Model.SelectedPermissionIds.Contains(permission.Id);
    <label class="list-group-item">
        <input type="checkbox"
               name="SelectedPermissionIds" 
               value="@permission.Id"
               @(isChecked ? "checked" : "") />
        @permission.Name
    </label>
}

    </div>

    <button type="submit" class="btn btn-success">Save Permissions</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Success"]</div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        <ul>
            @foreach (var state in ViewData.ModelState)
            {
                foreach (var error in state.Value.Errors)
                {
                    <li>@state.Key: @error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}
