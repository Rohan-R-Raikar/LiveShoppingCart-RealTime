@model IEnumerable<LiveShoppingCart_RealTime.Models.Product>
@using Microsoft.AspNetCore.Identity
@inject UserManager<LiveShoppingCart_RealTime.Models.ApplicationUser> UserManager
@inject SignInManager<LiveShoppingCart_RealTime.Models.ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Products";
}

<h2 class="mb-4 text-primary">Products</h2>

@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-success mb-4">
        <i class="bi bi-plus-circle"></i> Add New Product
    </a>
}

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                @* Optional image placeholder if product image is null *@
                @* <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/placeholder.png" : product.ImageUrl)" *@
                     @* class="card-img-top" alt="@product.Name" style="height:200px; object-fit:cover;" /> *@

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title fw-bold">@product.Name</h5>
                    <p class="card-text text-muted">@product.Description</p>
                    <p class="card-text mb-2"><strong>Price:</strong> @product.Price.ToString("C")</p>
                    <p class="card-text mb-3" data-product-id="@product.Id">
                        <strong>Stock:</strong>
                        <span class="product-stock">@product.Stock</span>
                    </p>

                    <div class="mt-auto d-grid gap-2">
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info btn-sm w-100">
                            <i class="bi bi-info-circle"></i> Details
                        </a>

                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm w-100">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-Productid="@product.Id" method="post" class="delete-form">
                                <button type="submit" class="btn btn-danger btn-sm w-100">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        }

                        @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
                        {
                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                <input type="hidden" name="productId" value="@product.Id" />
                                <button type="submit" class="btn btn-success btn-sm w-100">
                                    <i class="bi bi-cart-plus"></i> Add to Cart
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    document.querySelectorAll('.delete-form').forEach(function (form) {
        form.addEventListener('submit', function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Are you sure?',
                text: "This action cannot be undone!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    form.submit();
                }
            });
        });
    });
</script>
