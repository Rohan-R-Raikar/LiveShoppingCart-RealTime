@model LiveShoppingCart_RealTime.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<h2>@Model.Name</h2>

<div>
    <strong>Price:</strong> @Model.Price.ToString("C")<br />
    <strong>Stock:</strong> @Model.Stock<br />
    <strong>Description:</strong> @Model.Description<br />
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="@Model.Name" width="150" />
    }
</div>

<a asp-action="Index" class="btn btn-secondary mt-2">Back to Products</a>
